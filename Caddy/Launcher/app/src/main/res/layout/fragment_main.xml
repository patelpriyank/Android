<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"

    android:columnCount="4"
    >

    <Button
        android:id="@+id/buttonPhiladelphia"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:text="City guide" />

    <Button
        android:id="@+id/buttonTours"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:layout_columnSpan="3"
        android:text="Tours &amp; Attractions" />

    <Button
        android:id="@+id/buttonTransportation"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:text="Transportation" />

    <Button
        android:id="@+id/buttonEvents"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="Events" />

    <Button
        android:id="@+id/buttonHandyInfo"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="Handy Information" />

    <Button
        android:id="@+id/buttonHotels"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="Hotels" />


    <Button
        android:id="@+id/buttonLocalDeals"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="Local Deals" />

    <Button
        android:id="@+id/buttonCaddySpecials"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="fill"
        android:layout_columnSpan="4"
        android:text="Caddy Specials" />

    <Button
        android:id="@+id/buttonInternationalCalling"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_gravity="fill"
        android:layout_columnSpan="4"
        android:text="International Calling" />

</GridLayout>